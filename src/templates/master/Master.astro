---
const { frontmatter, indexing } = Astro.props;
import '../../assets/scss/docs.scss';
const title = frontmatter?.title || '';
---

<!doctype html>
<html lang="en">
   <head>
      <meta charset="utf-8" />
      {
         frontmatter?.indexing === false || indexing === false && (
            <meta name="robots" content="noindex" />
         )
      }
      <title>
         {`${title ? title : ''}${title ? ' \u00B7 ' : ''}ekelof.net`}
      </title>
      <meta name="viewport" content="width=device-width, initial-scale=1" />
      {
         frontmatter?.description && (
            <meta name="description" content={frontmatter?.description} />
         )
      }
      <!-- Additional head elements -->
   </head>
   <body class={frontmatter?.template ? `tmpl-${frontmatter?.template}` : ''}>
      <slot name="body-content">
         <div class="body">
            <main id="content">
               <div class="content-wrapper">
                  {title && <h1 class="doc-main-heading">{title}</h1>}
                  <slot />
               </div>
            </main>
         </div>
      </slot>
   </body>
</html>
